<h1><%= question_header(@test, @question) %></h1>
<%= form_with model: choose_model(@test, @question), local: true  do |form| %>
  <%= render 'shared/errors', resource: @question %> 
  <p>
    <label for="question-body">Question</label>
    <%= form.text_field :body, id: :question_body %>
  </p><br>
  <%= form.submit %>
  <p>
    <%= link_to 'Back', @test %>
  </p>
<% end %>