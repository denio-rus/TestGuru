<div class='card justify-content-center mt-3 index-page'>
  <div class="card-header text-center">
    <h3><%= t('.header') %></h3>
  </div>
  <div class="card-body">
    <table class="table text-center">
      <thead>
        <th><%= t('.badge_title') %></th>
        <th><%= t('.date') %></th>
      </thead>
      <tbody>
        <%= render @achievements %>
      </tbody>
    </table>
  </div>
  <%= link_to t('.link_badges'), badges_path %>
  <%= link_to t('link_back'), tests_path %>
</div>
