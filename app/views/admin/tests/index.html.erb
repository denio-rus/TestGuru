<div class="card justify-content-center mt-3">
  <div class="card-header text-center">
    <h1><%= t('.header') %></h1>
  </div>

  <div class="card-body">
    <p> 
      <%= link_to t('.link_new_test'), new_admin_test_path, class: "btn btn-outline-success" %>
    </p>
    
    <p> 
      <%= link_to t('.link_gists_index'), admin_gists_path, class: "btn btn-outline-primary" %>
    </p>

    <table class="table table-hover text-center">
      <thead class="thead-light">
        <tr> 
          <th><%= t('tests_table.title') %></th>
          <th><%= t('tests_table.level') %></th>
          <th><%= t('tests_table.number_of_questions') %></th>
          <th><%= t('tests_table.actions') %></th>
        </tr>
      </thead>
      </tbody class="tbody" >   
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
