<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <div class="form-group">
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, id: :test_title, placeholder: "Title", class: "form-control" %>
    </p><br>
  
    <p>
      <%= form.label :level %><br>
      <%= form.number_field :level, id: :test_level, placeholder: "Enter level", class: "form-control" %>
    </p><br>

 
    <p>
      <%= form.label :category_id %><br>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
    </p><br>

<p>
      <%= form.label :time_limit %><br>
      <%= form.number_field :time_limit, value: nil, min: 0, id: :test_time_limit, placeholder: "Enter level", class: "form-control" %>
    </p><br>

    <p><%= form.submit %></p>
  </div>
<% end %>

    