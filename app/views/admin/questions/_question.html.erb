<tr> 
  <td><%= question.body %></td>

  <td>
    <div class="btn-group" role="group" arial-label="actions">
      <%= link_to t('link_show'), admin_question_path(question), class: 'btn btn-outline-primary' %>
      <%= link_to t('link_edit'), edit_admin_question_path(question), class: 'btn btn-outline-secondary' %>
      <%= link_to t('link_delete'), 
                  admin_question_path(question),
                  class: 'btn btn-outline-danger', 
                  method: :delete,
                  data: { confirm: t(:sure?) } %>
    </div>
  </td>
</tr>