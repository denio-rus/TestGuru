<tr>
  <td><%= badge.title %></td>
  <td><img src="<%= badge.image %>" alt="img of award"></td>
  <td><%= badge.description %></td>
  <td class="align-middle">
    <div class="btn-group" role="group" arial-label="actions">
      <%= link_to t('link_show'), admin_badge_path(badge), class: "btn btn-outline-primary" %>
      <%= link_to t('link_edit'), edit_admin_badge_path(badge), class: "btn btn-outline-secondary" %>
      <%= link_to t('link_delete'),
                    admin_badge_path(badge),
                    class: "btn btn-outline-danger",
                    method: :delete,
                    data:   { confirm: t(:sure?) } %>
    </div>
  </td>
</tr>