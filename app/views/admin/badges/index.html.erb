<%= link_to t('.link_new_badge'), new_admin_badge_path, class: "btn btn-outline-success" %>

<div class='card justify-content-center mt-3 index-page'>
  <div class="card-header text-center">
    <h3><%= t('badges.index.header') %></h3>
  </div>
  <div class="card-body">
    <table class="table text-center">
      <thead>
        <th><%= t('badges.index.badge_title') %></th>
        <th><%= t('badges.index.badge_image') %></th>
        <th><%= t('badges.index.description') %></th>
        <th><%= t('.actions') %></th>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>
  </div>
  <%= link_to t('link_back'), admin_tests_path %>
</div>
